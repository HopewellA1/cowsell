@model AgriChoice.Models.Purchase

@{
    ViewData["Title"] = "Request Refund/Return";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">Request Refund/Return for @Model.PurchaseId</h1>

    <form asp-action="RequestRefund" method="post" enctype="multipart/form-data">
        <input type="hidden" name="PurchaseId" value="@Model.PurchaseId" />

        <div class="mb-4">
            <label for="reason" class="block text-sm font-medium text-gray-700">Reason for Refund/Return</label>
            <select id="reason" name="Reason" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                <option value="Defective Product">Defective Product</option>
                <option value="Wrong Item Delivered">Wrong Item Delivered</option>
                <option value="Item Not as Described">Item Not as Described</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="mb-4">
            <label for="additionalComments" class="block text-sm font-medium text-gray-700">Additional Comments (Optional)</label>
            <textarea id="additionalComments" name="AdditionalComments" rows="4"
                      class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
        </div>

        <div class="mb-4">
            <label for="uploadedFile" class="block text-sm font-medium text-gray-700">Upload Proof (Optional)</label>
            <input type="file" id="uploadedFile" name="uploadedFile"
                   accept="image/*"
                   class="mt-1 block w-full text-sm text-gray-500">

        </div>

        <div class="flex justify-end">
            <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                Submit Request
            </button>
        </div>
    </form>
</div>